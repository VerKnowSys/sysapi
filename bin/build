#!/bin/sh
# blame: @dmilith
# 2018-11-22-0129-1542846591


. bin/common "${*}"


echo
echo
echo "Project directory: ${_cargo_project_dir}"
echo "Project product: ${_bin_name}"
echo "Project release type: ${_release_type}"
echo "System type: ${_uname}"
echo
echo
echo "Workaround on 1.31.0 fail (https://github.com/rust-lang-nursery/failure/pull/279):"
echo "$ cargo update -p backtrace --precise 0.3.9"
echo


case "${_uname}" in
    FreeBSD)
        cd "${_cargo_project_dir}"
        bin/update

        printf "\n\nBuilding: SysAPI\n"
        cargo build ${_cargo_release_flag}
        if [ "0" != "${?}" ]; then
            echo "Build: Failed!" \
                && exit 1
        fi
        ;;

    *)
        echo "Platform not supported: ${_uname}" \
            && exit 1
        ;;

esac
